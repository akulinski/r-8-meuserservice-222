<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity CommentXProfile.
    -->
    <changeSet id="20191220215840-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="receiver_id"
                                 baseTableName="comment_x_profile"
                                 constraintName="fk_comment_x_profile_receiver_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="poster_id"
                                 baseTableName="comment_x_profile"
                                 constraintName="fk_comment_x_profile_poster_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>

        <addForeignKeyConstraint baseColumnNames="comment_id"
                                 baseTableName="comment_x_profile"
                                 constraintName="fk_comment_x_profile_comment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="comment"/>

    </changeSet>
</databaseChangeLog>
